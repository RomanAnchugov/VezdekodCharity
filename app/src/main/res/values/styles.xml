<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Buttons-->

    <style name="PrimaryBtn" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="PrimaryBtn.Light">
        <item name="backgroundTint">@color/lightButton</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="PrimaryBtn.SuperLight">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/inactiveButton</item>
        <item name="android:strokeColor">@color/inactiveButton</item>
    </style>

    <style name="PrimaryBtn.SuperLight.Inactive">
        <item name="background">@color/colorWhite</item>
        <item name="android:textAppearance">@style/InactiveButton</item>
        <item name="android:strokeColor">@color/inactiveButton</item>
        <item name="android:strokeWidth">1</item>
    </style>

    <!--Text Styles-->

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TitleText.Secondary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Description" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightText</item>
    </style>

    <style name="InactiveButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/inactiveButton</item>
        <item name="android:disabledAlpha">0.4</item>
    </style>
</resources>